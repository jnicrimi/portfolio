root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = unset
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.ts]
indent_size = 2

[*.vue]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
